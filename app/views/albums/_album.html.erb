<section class="wrapper post bg-img" style="background-image: url(<%= album.cover_image.url %>);">
      <div class="inner">
        <article>
          <header>
            <h2><%= album.name %></h2>
          </header>
          <div class="content">
            <p><%= album.description %></p>
          </div>
          <footer>
            <%= link_to "Open Album", album_path(album.id), class: "button alt" %>
          </footer>
        </article>
      </div>
    </section>