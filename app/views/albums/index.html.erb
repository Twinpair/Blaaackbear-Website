<div class="container">
  <div class="row">
    <%= link_to "Go Back To Homepage", root_path, class: "btn btn-success", style: "margin: 15px 10px;" %>
    <%= link_to "Go Back To Edit page", edit_path, class: "btn btn-warning", style: "margin: 15px 10px;" %>
    <div class="model col-lg-12">
      <h2 class="text-center">Albums</h2>
      <h1 class="text-center"><%= link_to "Create Album", new_album_path, class: "btn btn-primary btn-lg" %></h1><br>
      <h3 class="text-center">Click on an album to edit or delete it</h3>
      <div class="row">
        <% counter = 0 %>
        <% @albums.each do |album| %>
          <% if counter % 3 == 0 && counter != 0%>
            </div>
            <div class="row">
          <% end %>  
          <div class="col-lg-4 col-md-6 portfolio-item">
            <div class="card h-100" onclick="document.location='<%= album_path(album, edit: true) %>'" style="cursor: pointer;">
              <p class="card-text">Order Listed: <%= album.order_listed %></p>
              <%= image_tag(album.cover_image.thumb.url) %>
              <div class="card-body">
                <h3 class="card-title text-center">
                  <a href="<%= album_path(album, edit: true) %>"><%= album.name %></a><br>
                  Photos (<%= album.photos.count %>)
                </h3>
                <p class="card-text"><%= album.description %></p>
              </div>
            </div>
          </div>
          <% counter = counter + 1 %>
        <% end %>
      </div>
    </div>
  </div>
</div>