<div class="container">
  <div class="row">
    <%= link_to "Go Back To Homepage", root_path, class: "btn btn-success", style: "margin: 15px 10px;" %>
    <%= link_to "Go Back To Edit page", edit_path, class: "btn btn-warning", style: "margin: 15px 10px;" %>
    <div class="messages col-lg-12">
      <h2 class="text-center">All Messages (<%= @messages.count %>)</h2><br>
      <div class="row">
        <div class="col-lg-2 col-md-2">Name</div>
        <div class="col-lg-3 col-md-3">Email</div>
        <div class="col-lg-3 col-md-3">Message</div>
        <div class="col-lg-2 col-md-2">Date</div>
        <div class="col-lg-2 col-md-2">Delete</div>
      </div>
      <hr>
      <% @messages.each do |message| %>
        <div class="row">
          <div class="col-lg-2 col-md-2"><%= message.name %></div>
          <div class="col-lg-3 col-md-3"><%= message.email %></div>
          <div class="col-lg-3 col-md-3"><%= message.message %></div>
          <div class="col-lg-2 col-md-2"><%= message.created_at.strftime("%B %d, %Y")%></div>
          <div class="col-lg-2 col-md-2"><%= link_to "Delete", message, class: "btn btn-danger btn-lg", method: :delete, data: { confirm: "Are you sure you want to delete this message?" } %></div>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>
