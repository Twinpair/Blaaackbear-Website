<style type="text/css">
  .row{
    margin-bottom: 30px;
  }
  .btn{
    margin: 5px 0 5px 0;
  }
</style>

<div class="container">
  <div class="row text-center">
    <%= link_to "Go Back To Homepage", root_path, class: "btn btn-success", style: "margin-top: 20px;" %>
    <div class="model col-lg-12">
      <h2 style="margin-bottom: 30px;">Edit Your Website</h2>

      <div class="row text-center">
        <div class="col-lg-12">
          <h3><span>View or Edit the information on your site</span></h3>
        </div>
        <div class="col-lg-3 col-lg-offset-3">
          <h1><%= link_to "View Information", information_index_path, class: "btn btn-primary btn-lg" %></h1>
        </div>
        <div class="col-lg-3">
          <h1><%= link_to "Edit Information", information_edit_path, class: "btn btn-warning btn-lg" %></h1>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-lg-12">
          <h3><span>View or Edit the albums on your site</span></h3>
        </div>
        <div class="col-lg-3 col-lg-offset-3">
          <h1><%= link_to "View Albums", albums_path, class: "btn btn-primary btn-lg" %></h1>
        </div>
        <div class="col-lg-3">
          <h1><%= link_to "Edit Albums", albums_path, class: "btn btn-warning btn-lg" %></h1>
        </div>
      </div>
    </div>
  </div>
</div>